{
  "name": "amen",
  "version": "2.0.0",
  "description": "A simple test library for use with async functions",
  "keywords": [
    "test",
    "asynchronous",
    "promises"
  ],
  "files": [
    "lib/",
    "LICENSE"
  ],
  "main": "lib/amen.js",
  "scripts": {
    "test": "coffee --transpile test/index.coffee",
    "watch": "coffee --transpile -o lib/ -cw src/*.*coffee",
    "prepublish": "coffee --transpile -o lib/ -c src/*.*coffee",
    "postpublish": "(node_modules/.bin/json -f package.json version | xargs -I version git tag -am version version) && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/pandastrike/amen.git"
  },
  "authors": [
    {
      "name": "Dan Yoder",
      "email": "dan@pandastrike.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pandastrike/amen/issues"
  },
  "homepage": "https://github.com/pandastrike/amen",
  "dependencies": {
    "colors": "^0.6.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coffeescript": "^2.0.0",
    "json": "^9.0.3"
  },
  "engine": "node >= 6.0.0"
}
